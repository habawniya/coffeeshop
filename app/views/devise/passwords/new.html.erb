<div class="login-container">
  <h2 class="login-heading">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "login-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="login-field">
      <%= f.label :email, class: "login-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-input" %>
    </div>

    <div class="login-field">
      <%= f.submit "Send me reset password instructions", class: "login-submit" %>
    </div>
  <% end %>

  <div class="login-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
