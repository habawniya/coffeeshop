<h2 class="signup-title">Sign up</h2>

<div class="signup-container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "signup-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="signup-field">
      <%= f.label :email, class: "signup-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "signup-input" %>
    </div>

    <div class="signup-field">
      <%= f.label :password, class: "signup-label" %>
      <% if @minimum_password_length %>
        <em class="signup-hint">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "signup-input" %>
    </div>

    <div class="signup-field">
      <%= f.label :password_confirmation, class: "signup-label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "signup-input" %>
    </div>

    <div class="signup-actions">
      <%= f.submit "Sign up", class: "signup-btn" ,data: { turbo: false }%>
    </div>
  <% end %>

  <div class="signup-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
